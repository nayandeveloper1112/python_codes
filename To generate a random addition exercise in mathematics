import random

def generate_addition_exercise(min_value=1, max_value=100):
    # Generate two random numbers within the specified range
    num1 = random.randint(min_value, max_value)
    num2 = random.randint(min_value, max_value)
    
    # Create the addition problem
    problem = f"{num1} + {num2} = ?"
    solution = num1 + num2
    
    return problem, solution

# Example usage
problem, solution = generate_addition_exercise()
print("Exercise:", problem)
print("Solution:", solution)
